            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <PasswordField fx:id="RNewPassword" layoutX="181.0" layoutY="128.0" prefHeight="34.0" prefWidth="232.0" promptText="New Password" />
      <PasswordField fx:id="RVerifyPassword" layoutX="181.0" layoutY="200.0" prefHeight="34.0" prefWidth="232.0" promptText="Verify Password" />
      <Label layoutX="181.0" layoutY="47.0" prefHeight="30.0" prefWidth="274.0" text="Changer votre Password" textFill="#53c3ff">
